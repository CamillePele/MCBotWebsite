extends layout


block content
    .login-form
        form(method='POST', action='/login')
            h2.text-center Log in
            if success === false
                p
                    font(color='red') Bad Password !

            .form-group
                input.form-control(
                    type='password'
                    name='password'
                    placeholder='Password'
                    required
                )
            .form-group
                button.btn.btn-primary.btn-block(type='submit') Log in
